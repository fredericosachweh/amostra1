[Unit]
Description=The Nbridge service instance %i
After=syslog.target network.target remote-fs.target nss-lookup.target

[Service]
EnvironmentFile=/etc/sysconfig/nbridge
ExecStart=/usr/bin/node $NODEARGS_%i /iptv/usr/lib/nbridge/main.js -c /iptv/etc/nbridge/config_%i.json
Restart=always
User=nginx
Group=nginx
SyslogIdentifier=nbridge_%i
#StandardOutput=/iptv/var/log/nbridge/nbridge_%i.out
#StandardError=/iptv/var/log/nbridge/nbridge_%i.err

[Install]
WantedBy=multi-user.target
